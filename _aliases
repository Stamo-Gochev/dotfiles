# tmux a -t <session_name> - attaches to a session
alias ta="tmux a -t"
alias td="tmux detach"
# tmux kill-session -t <session_name> - destroys a session
alias tk="tmux kill-session -t"
# list sessions
alias tl="tmux ls"

